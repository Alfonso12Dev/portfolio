---
import discordjs from "./icons/js.astro"
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Html from "./icons/html5.astro"
import Css from "./icons/css.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  JS: {
 name: "Discord.js", 
 class: "bg-black text-white",
 icon: discordjs,
  },
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  HTML5: {
    name: "HTML5",
    class: "bg-black text-white",
    icon: Html,
  },
  CSS: {
    name: "CSS",
    class: "bg-black text-white",
    icon: Css,
  },
}
const PROJECTS = [
  {
    title: "Mxbot",
    description:
      "Bot exclusivo para la comunidad de México RP | Spanish, el mismo ofrece funcionalidades administrativas, de roleplay y de Tickets.",
    link: "https://discord.gg/mexicorp",
    image: "/projects/mxbot.webp",
    tags: [TAGS.JS],
  },
  {
    title: "España RP Bot",
    description:
    "Bot exclusivo solicitado para la comunidad de SpainRP, contiene funcionalidades que van desde la moderación, gestión de tickets y funciones administrativas.",
    link: "https://discord.gg/wGBuzcX5Z5",
    image: "/projects/spainbot.webp",
    tags: [TAGS.JS],
  },
  {
    title: "Traxteri",
    description:
    "Bot que estuvo funcionando en el período 2021-2023, el mismo contó con el apoyo de aproximadamente 110 comunidades y más de 30.000 usuarios, el bot tenía funciones administrativas, de utilidad y varios comandos de entretenimiento.",
    image: "/projects/traxteri.webp",
    tags: [TAGS.JS],
  }
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
      <div class="w-full md:w-1/2">
        <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-hidden rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
          <img 
            alt="Imágenes para los proyectos" 
            class="object-cover object-center w-full h-auto transition duration-500 sm:h-full md:scale-100 md:group-hover:scale-105 aspect-video" 
            loading="lazy" 
            src={image} 
          />
        </div>
      </div>

      <div class="w-full md:w-1/2 md:max-w-lg">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
          {title}
        </h3>
        <div class="flex flex-wrap mt-2">
          <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-5" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>

          <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
          <footer class="flex items-end justify-start mt-4 gap-x-4">
            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Preview
              </LinkButton>
            )} 
          </footer>
        </div>
      </div>
    </article>
    ))
  }
</div>




